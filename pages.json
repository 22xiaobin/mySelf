{
     // 在这里添加uview组件配置模式
    "easycom": {
        "^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
    },	
	
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "青年帮",
				"enablePullDownRefresh": true
			}
		}
	    ,{
            "path" : "pages/user/user",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "个人中心",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/newsDetails/newsDetails",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "详细信息",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/history/history",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "历史记录",
                "enablePullDownRefresh": false
            }
            
        }
    ],
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "青年帮",
		"navigationBarBackgroundColor": "#31c27c",
		"backgroundColor": "#F8F8F8"
	},
	"uniIdRouter": {},
	"tabBar": {
		"color": "#666",
		"selectedColor": "#31c27c",
		"list": [
			{
				"text": "首页",
				"pagePath": "pages/index/index",
				"iconPath": "static/images/home.png",
				"selectedIconPath": "static/images/home-h.png"
			},
			{
				"text": "历史记录",
				"pagePath": "pages/history/history",
				"iconPath": "static/images/history.png",
				"selectedIconPath": "static/images/history.png"
			},
			{
				"text": "个人",
				"pagePath": "pages/user/user",
				"iconPath": "static/images/user.png",
				"selectedIconPath": "static/images/user-h.png"
			}
		]
	}
}
